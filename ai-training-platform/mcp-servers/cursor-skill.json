{
  "name": "cursor-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Cursor IDE training demonstrations",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "mcp": {
    "name": "Cursor Training Server",
    "version": "1.0.0",
    "description": "Provides Cursor IDE training tools and demonstrations",
    "tools": [
      {
        "name": "cursor_demo",
        "description": "Demonstrates Cursor IDE features and AI-assisted coding",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "The Cursor feature to demonstrate",
              "enum": ["autocomplete", "chat", "codebase", "refactor", "debug"]
            },
            "language": {
              "type": "string",
              "description": "Programming language for the demo",
              "enum": ["javascript", "typescript", "python", "react", "nextjs"]
            }
          },
          "required": ["feature"]
        }
      },
      {
        "name": "cursor_exercise",
        "description": "Creates coding exercises for Cursor IDE practice",
        "inputSchema": {
          "type": "object",
          "properties": {
            "difficulty": {
              "type": "string",
              "description": "Exercise difficulty level",
              "enum": ["beginner", "intermediate", "advanced"]
            },
            "topic": {
              "type": "string",
              "description": "Programming topic for the exercise"
            }
          },
          "required": ["difficulty", "topic"]
        }
      }
    ]
  }
}
