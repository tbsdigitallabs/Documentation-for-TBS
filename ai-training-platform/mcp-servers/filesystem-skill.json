{
  "name": "filesystem-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for filesystem and project structure training",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "mcp": {
    "name": "Filesystem Training Server",
    "version": "1.0.0",
    "description": "Provides filesystem and project structure training tools",
    "tools": [
      {
        "name": "project_structure_demo",
        "description": "Demonstrates proper project structure and organisation",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project_type": {
              "type": "string",
              "description": "Type of project to demonstrate",
              "enum": ["web_app", "api", "mobile_app", "library", "monorepo"]
            },
            "framework": {
              "type": "string",
              "description": "Framework or technology stack",
              "enum": ["nextjs", "react", "vue", "angular", "nodejs", "python"]
            }
          },
          "required": ["project_type"]
        }
      },
      {
        "name": "file_organisation_exercise",
        "description": "Creates exercises for file organisation and structure",
        "inputSchema": {
          "type": "object",
          "properties": {
            "complexity": {
              "type": "string",
              "description": "Exercise complexity level",
              "enum": ["basic", "intermediate", "advanced"]
            },
            "focus_area": {
              "type": "string",
              "description": "Focus area for the exercise",
              "enum": ["naming", "folder_structure", "imports", "exports", "configuration"]
            }
          },
          "required": ["complexity", "focus_area"]
        }
      }
    ]
  }
}
