{
  "name": "github-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for GitHub workflow training",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "mcp": {
    "name": "GitHub Training Server",
    "version": "1.0.0",
    "description": "Provides GitHub workflow training and demonstrations",
    "tools": [
      {
        "name": "github_workflow_demo",
        "description": "Demonstrates GitHub workflows and best practices",
        "inputSchema": {
          "type": "object",
          "properties": {
            "workflow": {
              "type": "string",
              "description": "The GitHub workflow to demonstrate",
              "enum": ["pull_request", "code_review", "branching", "collaboration", "ci_cd"]
            },
            "team_size": {
              "type": "string",
              "description": "Team size for the workflow",
              "enum": ["small", "medium", "large"]
            }
          },
          "required": ["workflow"]
        }
      },
      {
        "name": "github_copilot_demo",
        "description": "Demonstrates GitHub Copilot features and usage",
        "inputSchema": {
          "type": "object",
          "properties": {
            "feature": {
              "type": "string",
              "description": "Copilot feature to demonstrate",
              "enum": ["code_completion", "chat", "pull_request_summary", "code_explanation"]
            }
          },
          "required": ["feature"]
        }
      }
    ]
  }
}
